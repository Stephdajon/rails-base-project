<main>
  <section class="text-center container">
    <%= image_tag "GoLearning.png" %>
    <div class="row py-lg-4 text-center container">
      <div class="col-lg-6 col-md-8 mx-auto">
        
        <p class="lead text-muted">Learning is the process of acquiring new understanding, knowledge, behaviors, skills, values, attitudes, and preferences. The ability to learn is possessed by humans, animals, and some machines; there is also evidence for some kind of learning in certain plants.</p>
        <p>
          <%= link_to 'Get Started', new_user_session_path, class:"btn btn-primary my-2" %>
          <a href="#" class="btn btn-secondary my-2"><i class="fas fa-cart-plus"> </i> Shop now</a>
        </p>
      </div>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% @lessons.each do |lesson|%>
          <div class="col">
            <div class="card shadow-sm">
                 <% if lesson.thumbnail.attached? %>
                    <%= image_tag url_for(lesson.thumbnail), height: '250', width: '50', class: "card-img-top"%>
                  <% end %>
              <div class="card-body">
                <h4 class="card-text"><%= lesson.name %></h3>
                <h3 class="card-text"><%= lesson.price.to_i %> PHP </h3>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <%= link_to lesson_details_path(lesson.teacher_subject.subject.name.split(' ').join, lesson.teacher_subject.subject.course_id, lesson.id) do %><button type="button" class="btn btn-md btn-primary"><i class="fas fa-eye"> </i> View</button><% end %>
                  </div>
                  <small class="text-muted"><strong>Uploaded Since </strong> <%= lesson.created_at.strftime("%A %b %e, %Y ") %></small>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
