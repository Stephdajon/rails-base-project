<main>

  <section class="py-1 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">LANDING PAGE</h1>
        <p class="lead text-muted">Something short and leading about the collection below—its contents, the creator, etc. Make it short and sweet, but not too short so folks don’t simply skip over it entirely.</p>
        <p>
          <a href="#" class="btn btn-primary my-2">Get Started</a>
          <a href="#" class="btn btn-secondary my-2"><i class="fas fa-cart-plus"> </i> Shop now</a>
        </p>
      </div>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% @lessons.each do |lesson|%>
          <div class="col">
            <div class="card shadow-sm">
              <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title><%= lesson.name %></title><rect width="100%" height="100%" fill="#55595c" /> <image xlink:href="https://c8.alamy.com/comp/DR0N8R/books-on-a-table-and-one-with-learn-to-code-cover-book-concept-DR0N8R.jpg" x="0" y="0" height="225" width="100%"/>
                <%# <text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text> %>
              </svg>

              <div class="card-body">
                <h4 class="card-text"><%= lesson.name %></h3>
                <h3 class="card-text"><%= lesson.price.to_i %> PHP </h3>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <%= link_to lesson_details_path(lesson.teacher_subject.subject.name.split(' ').join, lesson.teacher_subject.subject.course_id, lesson.id) do %><button type="button" class="btn btn-md btn-primary"><i class="fas fa-eye"> </i> View</button><% end %>
                  </div>
                  <small class="text-muted"><strong>Uploaded Since </strong> <%= lesson.created_at.strftime("%A %b %e, %Y ") %></small>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
