<div class="container d-flex flex-row">
  
  <!--
  <%= link_to new_invitation_path do %><button> Add invatation</button><% end %>
  -->
  <div class="card p-3 mx-2 shadow" style="width: 15rem;">
    <%= image_tag "GoLearning.png", class:"card-img-top" %>
    <div class="card-body">
      <h5 class="card-title">Psychology</h5>
      <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
      <a href="#" class="btn btn-primary">Subjects</a>
    </div>
  </div>

  <div class="card p-3 mx-2 shadow" style="width: 15rem;">
    <%= image_tag "GoLearning.png", class:"card-img-top" %>
    <div class="card-body">
      <h5 class="card-title">Architecture</h5>
      <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
      <a href="#" class="btn btn-primary">Subjects</a>
    </div>
  </div>

  <div class="card p-3 mx-2 shadow" style="width: 15rem;">
    <%= image_tag "GoLearning.png", class:"card-img-top" %>
    <div class="card-body">
      <h5 class="card-title">Engineering</h5>
      <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
      <a href="#" class="btn btn-primary">Subjects</a>
    </div>
  </div>
  
  <h1><%= current_review_center.name %></h1>
  <h1>Courses</h1>
  <% if @rc_courses.any? %>
    <% @rc_courses.each do |rc_course| %>
      <%= rc_course.course.name %>
      <%= link_to 'View Details', rc_course_path(rc_course) %>
    <% end %>
  <% else %>
    <h1>You have not added any course.</h1>
  <% end %>

  <h1>Recently uploaded lessons</h1>
  <% if @recently_uploaded_lessons.any? %>
    <%= render 'rc_pages/shared/lessons', lessons: @recently_uploaded_lessons %>
  <% else %>
  <% end %>
</div>
