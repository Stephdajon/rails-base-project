<div class="container">
  <h1>Invitations from review centers</h1>

  <% if @rc_teacher_invitations.empty? %>
    <span>No existing invitation</span>
  <% else %>
    <table class="table">
      <thead>
        <tr>
          <th>Review Center</th>
          <th class= "text-center">Invited at</th>
          <th class= "text-center">Action</th>
        </tr>
      </thead>
      <tbody>
     
        <%  @rc_teacher_invitations.each do |rc_teacher| %>
          <tr>
            <td><%= rc_teacher.review_center.name %></td>
            <td class= "text-center"><%= rc_teacher.created_at.to_formatted_s(:long) %></td>
            <td class= "d-flex justify-content-center">
              <%= link_to 'Accept', accept_invitation_path(rc_teacher), method: :patch %>
              <%= link_to 'Reject', reject_invitation_path(rc_teacher), method: :patch %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
