<main class="form-signin text-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <h1 class="h3 mb-3 fw-normal">Registration</h1>
    
    <div class="form-floating">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'name@example.com', class: 'form-control', id: 'floatingInput' %>
      <%= f.label :email, for: 'floatingInput' %>
    </div>
    <div class="form-floating">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password', class: 'form-control mb-0', id: 'floatingPassword' %>
      <%= f.label :password, for: 'floatingPassword' %>
    </div>

    <div class="form-floating"> 
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Password Confirmation', class: 'form-control mb-0', id: 'floatingPassword' %>
      <%= f.label :password_confirmation, for: 'floatingPassword' %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'w-100 btn btn-lg btn-primary mt-2' %>
    </div>
    <div class="actions mt-3">
    <p class="sign-up-user">Already have an account?
      <%= link_to "Log in", new_session_path(resource_name), class: 'login-reg' %>
    </p>
    </div>
  <% end %>

</main>