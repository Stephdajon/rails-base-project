<div class="container text-white text-center">
  <h1 class="display-4" style="color:black;">Access Lesson</h1><br>
</div>

<div class="d-flex justify-content-between container">
<div class="container">
  <div>
    <h1>Star Ratings</h1>
    <div class="star-rating mb-2">
      <div class="star-rating-front" style="width: <%= @lesson.review_score_percentage %>%; color:yellow !important;">★★★★★</div>
      <div class="star-rating-back">★★★★★</div>
    </div>
    <h1>Total Ratings</h1>
    <div class="average-score-display mr-3 pt-2">
      <p ><%= @lesson.avg_score %> Rate </p> 
    </div>
    <h1>Instructor</h1>
    <p><strong class="text-primary"></strong> <%= @lesson.teacher_subject.rc_teacher.user.firstname.capitalize + ' ' +  @lesson.teacher_subject.rc_teacher.user.lastname.capitalize %></p>
    <h1>Review Center</h1>
    <p><strong class="text-primary"></strong> <%= @lesson.teacher_subject.rc_teacher.review_center.name.capitalize %></p>
  </div>
  
  <div>
    <h2>Price</h2>
    <span><%= number_to_currency(@lesson.price_cents, unit: '$ ') %></span>
  </div>

  <div>
    <h2>Description</h2>
    <p style="width: 40%;"><%= @lesson.details %></p>
  </div>
 
</div>
  <div>
    <% if @lesson.video.attached? %>
      <%= cl_video_tag url_for(@lesson.video), controls: true, controlsList: "nodownload", poster: url_for(@lesson.thumbnail), style: 'height:600px; width:100%; margin-top:-100px;' %>
    <% end %>
    <div class="d-flex flex-column">
      <h4>Lesson: <%= @lesson.name %></h4>
      <h4>Course: <%= @lesson.rc_course.course.name %></h4>
      <h4>Subject: <%= @lesson.teacher_subject.subject.name %></h4>
    </div>
  </div>
</div>