<div class="container">
  <table class="table table-striped">
    <h1>Student Transactions</h1>
    <thead class="thead-dark">
      <tr>
        <th scope="col">Lesson Name</th>
        <th scope="col">Price</th>
        <th scope="col">Buyer</th>
        <th scope="col">Seller</th>
        <th scope="col">Date of transaction</th>
        <th scope="col">Status</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
    <% @transactions.each do |transaction|%>
      <tr>
        <td scope="row"><%= transaction.name %></td>
        <td scope="row"><%= transaction.price %></td>
        <td scope="row"><%= transaction.user.email %></td>
        <td scope="row"><%= transaction.lesson.teacher_subject.rc_teacher.user.email %></td>
        <td scope="row"><%= transaction.created_at.strftime("%A %b %e, %Y ") %></td>
        <td><%= transaction.status ==  0 && 'PAID' %></td>
        <td>Buy</td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
