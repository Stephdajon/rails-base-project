<div class="container">
  <table class="table table-striped">
    <h1>User List</h1>
    <thead class="thead-dark">
      <tr>
        <th scope="col">Email</th>
        <th scope="col">Username</th>
        <th scope="col">Firstname</th>
        <th scope="col">Lastname</th>
        <th scope="col">Status</th>
        <th scope="col">Role</th>
        <th scope="col">Created Since</th>
        <th scope="col">Updated Since</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user|%>
        <% if user.type == "Teacher" || user.type == "Student" %>
          <tr>
            <th scope="row"><%= user.email %></th>
            <th scope="row"><%= user.username %></th>
            <th scope="row"><%= user.firstname %></th>
            <th scope="row"><%= user.lastname %></th>
            <th scope="row" style="color:<%= user.status == 'active' ? 'green' : 'blue' %>;"><%= user.status.capitalize %></th>
            <th scope="row"><%= user.type %></th>
            <th scope="row"><%= user.created_at.strftime("%A %b %e, %Y ") %></th>
            <th scope="row"><%= user.updated_at.strftime("%A %b %e, %Y ") %></th>
            <th scope="row">
              <%#= link_to approve_users_path(student.id), method: :patch do %><button class="btn btn-md btn-warning">Show</button><%# end %>
            </th>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
