<div>
  <% @users.each do |user|%>
    <% if user.type == "Teacher" || user.type == "Student" && user.status == "active" %>
  
      <div class="list-group">
        <div class="list-group-item list-group-item-action" aria-current="true">
          <div class="d-flex w-100 justify-content-between">
              <h4 class="mb-1"><%= user.firstname.capitalize %> <%= user.lastname.capitalize %></h4>
                <small style="color:<%= user.status == 'active' ? 'green' : 'blue' %>;"><%= user.status.capitalize %></small>
            </div>
            <p class="mb-1"><%= user.username.capitalize %></p>
            
            <div class="d-flex w-100 justify-content-between">
              <small><%= user.email %></small><br/>
              <small class="text-muted"><%= user.type %></small>
            </div>
            <div class="d-flex w-100 justify-content-between">
              <small class="text-muted">Created: <%= user.created_at.strftime("%A %b %e, %Y ") %></small>
              <small class="text-muted">Updated: <%= user.updated_at.strftime("%A %b %e, %Y ") %></small>
            </div>
            <% if user.type == "Student" %>
                <%= link_to admin_user_details_path(user.id) do %><button class="btn btn-md btn-warning">Show</button><% end %>
              <% elsif user.type == "Teacher" %>
                <%= link_to admin_teacher_details_path(user.id) do %><button class="btn btn-md btn-warning">Show</button><% end %>
              <% end %>
        </div>
        
      </div>

    <% end %>
  <% end %>
</div>
