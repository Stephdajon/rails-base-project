<div class="container">
  <table class="table table-striped">
    <h1>Pending Review Centers</h1>
    <thead class="thead-dark">
      <tr>
        <th scope="col">Email</th>
        <th scope="col">Name</th>
        <th scope="col">Status</th>
        <th scope="col">Created Since</th>
        <th scope="col">Updated Since</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
    <% @review_centers.each do |rc|%>
      <tr>
        <th scope="row"><%= rc.email %></th>
        <th scope="row"><%= rc.name %></th>
        <th scope="row" style="color:blue;"><%= rc.status.capitalize %></th>
        <th scope="row"><%= rc.created_at.strftime("%A %b %e, %Y ") %></th>
        <th scope="row"><%= rc.updated_at.strftime("%A %b %e, %Y ") %></th>
        <th scope="row">
          <%= link_to approve_rc_path(rc.id), method: :patch do %><button class="btn btn-md btn-primary">Approve</button><% end %>
        </th>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
