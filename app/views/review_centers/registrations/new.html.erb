<main class="form-signin text-center">
  <%= form_for(resource, as: resource_name, url: rc_signup_create_path) do |f| %>
    <%#= render "devise/shared/error_messages", resource: resource %>

    <h1 class="h3 mb-3 fw-normal">Signup Review Center</h1>
    
    <div class="form-floating mb-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'name@example.com', class: 'form-control shadow-none', id: 'floatingInput' %>
      <%= f.label :email %>
        <% resource.errors.full_messages_for(:email).each do |message| %>
          <p style="color:red;"><%= message %></p>
        <% end %>
    </div>

    <div class="form-floating mb-3">
      <%= f.text_field :name, autofocus: true, autocomplete: "email", placeholder: 'name', class: 'form-control shadow-none', id: 'floatingInput' %>
      <%= f.label :name, for: 'floatingInput' %>
       <% resource.errors.full_messages_for(:name).each do |message| %>
          <p style="color:red;"><%= message %></p>
        <% end %>
    </div>

    <div class="form-floating mb-3">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password', class: 'form-control mb-0 shadow-none', id: 'floatingPassword' %>
      <%= f.label :password, for: 'floatingPassword' %>
       <% resource.errors.full_messages_for(:password).each do |message| %>
          <p style="color:red;"><%= message %></p>
        <% end %>
    </div>

    <div class="form-floating mb-3"> 
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Password Confirmation shadow-none', class: 'form-control mb-0', id: 'floatingPassword' %>
      <%= f.label :password_confirmation, for: 'floatingPassword' %>
      <% resource.errors.full_messages_for(:password_confirmation).each do |message| %>
        <p style="color:red;"><%= message %></p>
      <% end %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'w-100 btn btn-lg btn-primary mt-2' %>
    </div>
    <div class="actions mt-3">
    <p class="sign-up-user">Already have an account?
      <%= link_to "Log in", new_session_path(resource_name), class: 'login-reg' %>
    </p>
    </div>
  <% end %>

</main>
