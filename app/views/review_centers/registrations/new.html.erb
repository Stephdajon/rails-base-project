<div>
  <h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "review_centers/shared/error_messages", resource: resource %>

  <div class="field">
    <br />
    <%= f.text_field :name, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email"%>
  </div>

  <div class="field">
    
    <% if @minimum_password_length %>
    <em> <%= @minimum_password_length %> </em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Password Confirmation", class:"form-control" %>
  </div>

  <div class="actions mb-3">
  <br/>
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "review_centers/shared/links" %>

</div>